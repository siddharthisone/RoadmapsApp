<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    android:background="@drawable/gradi"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="@string/intro"
        android:textColor="#F6EBEB"
        android:textSize="50sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_light"
        android:text="@string/intro1"
        android:textColor="#F6EBEB"
        android:layout_marginBottom="20dp"
        android:textSize="50sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_light"
        android:text="Siddharth's"
        android:textColor="#F6EBEB"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/julius_sans_one"
        android:text="@string/intro3"
        android:textColor="#F6EBEB"
        android:textSize="30sp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="82sp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/julius_sans_one"
        android:text="@string/intro4"
        android:textColor="#F6EBEB"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:backgroundTint="#0BA2FF"
        android:id="@+id/but1"
        android:textSize="11sp"
        android:fontFamily="@font/alata"
        android:text="@string/Buttonname" />



</LinearLayout>